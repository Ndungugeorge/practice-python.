import sys
n = len(sys.argv)-1
if n == 0:
    print("{} argument.".format(n))
elif n == 1:
    print("{} argument:".format(n))
else:
    print("{} arguments:".format(n))

if n > 0:
    j = 0
    for i in sys.argv:
        if j != 0:
            print("{}: {}".format(j,i))
        j+=1
        

